{% render 'partials/head.liquid' %}

<article class="visitekaartje">

  <section class="visitekaartje__wrap cq">

    <!-- checkbox = “schakelaar” voor tap-to-flip -->
    <input class="visitekaartje__toggle" type="checkbox" id="flip">

    <section class="visitekaartje__card">

      <!-- FRONT (klik/tap) -->
      <label class="visitekaartje__side visitekaartje__front" for="flip">
        <h1 class="visitekaartje__front-name">{{ person.name }}</h1>
      </label>

      <!-- BACK -->
      <section class="visitekaartje__side visitekaartje__back">

        <header class="visitekaartje__header">
          <h2 class="visitekaartje__name">{{ person.name }}</h2>
          <p class="visitekaartje__intro">
            Ik kijk ernaar uit om mijn kennis te verbreden.
          </p>
        </header>

        <main class="visitekaartje__main">

          <section class="visitekaartje__content">
            <h3 class="visitekaartje__role">Student FDND</h3>

            <ul class="visitekaartje__list">
              <li>Front-end development</li>
              <li>Leeftijd</li>
              <li>Hobby’s</li>
            </ul>

            <nav class="visitekaartje__links">
              <a class="visitekaartje__icon" href="#" target="_blank">⌂</a>
              <a class="visitekaartje__icon" href="#" target="_blank">in</a>
              <a class="visitekaartje__icon" href="mailto:voorbeeld@mail.com">✉</a>
            </nav>

            <!-- Terug flippen op mobiel -->
            <p class="visitekaartje__back-close">
              <label class="visitekaartje__close" for="flip">Terug</label>
            </p>
          </section>

          <figure class="visitekaartje__media">
            <img
              class="visitekaartje__img"
              src="/Squad1J-Jasin-2.jpg"
              alt="{{ person.name }}"
              width="320"
              height="320"
            >
          </figure>

        </main>

      </section>

    </section>

  </section>

</article>

{% render 'partials/foot.liquid' %}
